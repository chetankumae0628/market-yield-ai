{
  "info": {
    "name": "Market Yield AI API",
    "description": "Complete API collection for Market Yield AI backend",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Farmer\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"farmer\",\n  \"farmSize\": \"5 acres\",\n  \"experience\": \"Experienced\",\n  \"location\": \"Delhi, India\",\n  \"phone\": \"+91 98765 43210\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/register",
              "host": ["{{baseUrl}}"],
              "path": ["users", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/login",
              "host": ["{{baseUrl}}"],
              "path": ["users", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.token) {",
                  "        pm.collectionVariables.set('token', response.data.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/profile",
              "host": ["{{baseUrl}}"],
              "path": ["users", "profile"]
            }
          }
        }
      ]
    },
    {
      "name": "Crop Management",
      "item": [
        {
          "name": "Get All Crops",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/crops?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["crops"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Create Crop",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Tomatoes\",\n  \"type\": \"vegetable\",\n  \"season\": \"summer\",\n  \"plantingMonths\": [3, 4, 5],\n  \"harvestMonths\": [6, 7, 8],\n  \"description\": \"High-yield tomato variety\",\n  \"marketDemand\": \"high\",\n  \"difficulty\": \"medium\",\n  \"waterRequirement\": \"high\",\n  \"soilType\": [\"loamy\", \"sandy loam\"],\n  \"climateRequirements\": [\"warm\", \"sunny\"],\n  \"pests\": [\"aphids\", \"whiteflies\"],\n  \"diseases\": [\"blight\", \"mosaic virus\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/crops",
              "host": ["{{baseUrl}}"],
              "path": ["crops"]
            }
          }
        },
        {
          "name": "Get Market Overview",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/crops/market-overview",
              "host": ["{{baseUrl}}"],
              "path": ["crops", "market-overview"]
            }
          }
        },
        {
          "name": "Add Yield Data",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"year\": 2024,\n  \"month\": 6,\n  \"yield\": 85.5,\n  \"price\": 45.0,\n  \"demand\": 90,\n  \"weatherScore\": 8.5,\n  \"soilScore\": 7.2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/crops/:cropId/yield-data",
              "host": ["{{baseUrl}}"],
              "path": ["crops", ":cropId", "yield-data"],
              "variable": [
                {
                  "key": "cropId",
                  "value": "CROP_ID_HERE"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Reports",
      "item": [
        {
          "name": "Generate Report",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Monthly Crop Analysis\",\n  \"type\": \"monthly\",\n  \"description\": \"Comprehensive monthly crop analysis\",\n  \"filters\": {\n    \"cropType\": \"vegetable\",\n    \"marketDemand\": \"high\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/reports/generate",
              "host": ["{{baseUrl}}"],
              "path": ["reports", "generate"]
            }
          }
        },
        {
          "name": "Get User Reports",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/reports/my-reports?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["reports", "my-reports"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:5000/health",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["health"]
            }
          }
        }
      ]
    }
  ]
}
